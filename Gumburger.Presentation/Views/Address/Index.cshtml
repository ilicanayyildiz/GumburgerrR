@using Gumburger.Application.Models.DTOs;
@using Gumburger.Domain.Enums;
@model List<AddressDTO>
@{
    ViewData["Title"] = "Menus";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";

}

<body>
    <div class="ms-5 d-flex flex-column gap-2">
        <header>
        </header>

        @if (Model != null)
        {

            <table class="table-bordered w-75">
                <thead>
                    <tr>
                        <th style="width:25%">Id</th>
                        <th style="width:20%">Full Address</th>

                    </tr>
                </thead>
                <tbody>


                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.FullAddress</td>

                                <td>

                                    <a asp-action="Edit" asp-controller="Address" asp-route-id="@item.Id">
                                        <button class="btn btn-secondary btn-sm d-inline-flex"><i class="fa fa-pen"></i></button>
                                    </a>

                                    <a asp-action="Delete" asp-controller="Address" asp-route-id="@item.Id">
                                        <button class="btn btn-danger btn-sm d-inline-flex"><i class="fa fa-trash"></i></button>
                                    </a>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>





            @if (Model != null)
            {
                <a asp-action="Create" asp-controller="Address">
                    <button class="btn btn-dark btn-sm d-inline-flex">Add a New Address</button>
                </a>
            }

        }

    </div>
</body>


