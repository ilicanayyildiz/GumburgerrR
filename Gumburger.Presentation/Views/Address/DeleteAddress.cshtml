@using Gumburger.Application.Models.DTOs;
@using Gumburger.Domain.Enums;
@model AddressDTO

@{
    ViewData["Title"] = "DeleteAddress";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}


<h2>Delete</h2>
<h3>Are you sure you want to delete this address?</h3>
<div>
    <h4>Address Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Full Address</dt>
        <dd class="col-sm-10">@Model.FullAddress</dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
