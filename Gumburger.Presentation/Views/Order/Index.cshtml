@using Gumburger.Application.Models.DTOs;
@model List<OrderDTO>

@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<body>
    <div class="ms-5 d-flex flex-column gap-2">
    <header>
        <h1>Orders</h1>
    </header>

        @if (Model != null && Model.Any())
        {
            <table class="table-bordered w-75">
                <thead>
                    <tr>
                        <th style="width:25%">Id</th>
                        <th style="width:20%">Order Date</th>
                        <th style="width:40%">Notes</th>
                        <th style="width:15%">Quantity</th>
                        @* <th style="width:15%">Actions</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.OrderDate</td>
                                <td>@item.Notes</td>
                                <td>@item.Quantity</td>

                            @*  <td>
                            <a asp-action="Edit" asp-controller="Order" asp-route-id="@item.Id">
                                <button class="btn btn-secondary btn-sm"><i class="fa fa-pen"></i></button>
                            </a>

                            <a asp-action="Delete" asp-controller="Order" asp-route-id="@item.Id">
                                <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                            </a>
                        </td> *@
                            </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No orders found.</p>
        }

    <div>
        <a asp-action="EditProfile" asp-controller="Account">Back to Profile</a>
    </div>
    </div>
</body>
