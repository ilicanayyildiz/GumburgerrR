@using Gumburger.Application.Models.DTOs;
@model RegisterDTO

@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üye Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/login.css">


</head>
<body>
    <div class="container">
        <div class="title">Kayıt Ol</div>
        <div class="content">
            <form asp-action="Register" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="user-details">
                    <div class="input-box">
                        <span class="details">Ad</span>
                        <input asp-for="FirstName" placeholder="Joe" required>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Soyad</span>
                        <input asp-for="LastName" placeholder="Doe" required>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Email</span>
                        <input asp-for="Email" placeholder="joe.doe@gmail.com" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Kullanıcı Adı</span>
                        <input asp-for="UserName" placeholder="hungryJoe" required>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Şifre</span>
                        <input asp-for="Password" type="password" placeholder="Jdoe123+" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Şifre Onay</span>
                        <input asp-for="ConfirmedPassword" type="password" placeholder="Jdoe123+" required>
                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Kaydol" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>