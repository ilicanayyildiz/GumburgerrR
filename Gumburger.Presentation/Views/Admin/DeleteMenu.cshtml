@using Gumburger.Application.Models.DTOs;
@using Gumburger.Domain.Entities.Concrete;
@model Menu

@{
    ViewData["Title"] = "DeleteMenu";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<div class="row flex-column container ps-5">
    <h1>Delete</h1>
    <hr />

    <h3>Are you sure you want to delete this?</h3>
    <div>

        <hr />
        <dl class="row">
            <dt class="col-md-6">
                @Html.DisplayNameFor(model => model.MenuName)
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.MenuName)
            </dd>

            <dt class="col-md-6">
                @Html.DisplayNameFor(model => model.MenuPrice)
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.MenuPrice)
            </dd>



        </dl>

        <form asp-action="DeleteMenu">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Menus">Back to List</a>
        </form>
    </div>
</div>
